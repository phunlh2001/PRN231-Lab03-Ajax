@model BusinessObjects.Data.Product

@{
    ViewData["Title"] = "View Details";
}

<h2>Product Details</h2>

<dl>
    <dt>@Model.ProductName</dt>
    <dd>Category: @Model.Category.CategoryName</dd>
    <dd>Price: $@Model.UnitPrice</dd>
    <dd>Stock: @Model.UnitsInStock</dd>
    <dt>
        <a href="/product" class="btn btn-outline-info">Back to home</a>
    </dt>
</dl>
